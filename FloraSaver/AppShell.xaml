<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FloraSaver.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FloraSaver"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="Tab_Options">
        <Tab Title="Home" Icon="homeicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Plants" Icon="planticon.png">
            <ShellContent ContentTemplate="{DataTemplate local:TablePage}" Route="TablePage" />
        </Tab>
        <Tab Title="Handling" Icon="handlingicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:HandlingPage}" Route="HandlingPage" />
        </Tab>
        <Tab Title="Settings" Icon="settingsicon.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" Route="SettingsPage" />
        </Tab>
    </TabBar>
</Shell>