<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FloraSaver.DatabaseExportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converter="clr-namespace:FloraSaver.Converters"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:model="clr-namespace:FloraSaver.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:FloraSaver.ViewModels"
    x:DataType="viewmodel:BackupRestoreViewModel">
    <!--<ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding AppearingHandlingCommand}" EventName="Appearing" />
        <toolkit:EventToCommandBehavior Command="{Binding DisappearingHandlingCommand}" EventName="Disappearing" />
    </ContentPage.Behaviors>-->
    <Grid>
        <Image Aspect="Fill" Source="card_background_page.png" />
        <Grid RowDefinitions="*,*">

            <Grid Grid.Row="0">
                <ActivityIndicator
                    Grid.RowSpan="2"
                    HorizontalOptions="FillAndExpand"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    VerticalOptions="CenterAndExpand"
                    Color="#e1ad01" />
            </Grid>
            <VerticalStackLayout>
                <Border HorizontalOptions="Start" WidthRequest="330">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="310" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Background="Black" />
                        <Entry
                            x:Name="_DBFileName"
                            Grid.Column="1"
                            Completed="Entry_Completed"
                            Placeholder="{Binding DefaultFileName}"
                            ReturnType="Send"
                            Text="{Binding FileName, StringFormat='{0}', Mode=TwoWay}"
                            WidthRequest="320" />
                        <Rectangle Grid.Column="2" Background="Black" />
                    </Grid>
                </Border>
                <Button
                    Command="{Binding BackupDatabaseCommand}"
                    CommandParameter="{Binding FileName}"
                    Text="Backup" />
                <Grid
                    Padding="0,215,0,0"
                    ColumnDefinitions="250,*"
                    HorizontalOptions="FillAndExpand"
                    RowDefinitions="*, 130, 30"
                    RowSpacing="0"
                    VerticalOptions="EndAndExpand">
                    <Image
                        x:Name="clipet"
                        Grid.Row="0"
                        Grid.Column="1"
                        Aspect="Fill"
                        Source="up_close_base_clipet.png"
                        VerticalOptions="EndAndExpand" />
                    <Grid
                        x:Name="speechSpace"
                        Grid.Row="1"
                        Grid.ColumnSpan="2">
                        <Image
                            Aspect="Fill"
                            HeightRequest="140"
                            Source="speech_bubble.png"
                            WidthRequest="400" />
                        <!--  162 characters allowed per box before it's gotta be split  -->
                        <Label
                            x:Name="speech"
                            FontSize="22"
                            HeightRequest="120"
                            Text="{Binding ClipetBackupText}"
                            TextColor="Orange"
                            WidthRequest="375" />
                    </Grid>
                </Grid>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>