                                                    Text="Color:" />
                                                <Border
                                                    Grid.Row="2"
                                                    Grid.Column="1"
                                                    BackgroundColor="Black"
                                                    HeightRequest="40"
                                                    HorizontalOptions="Start"
                                                    VerticalOptions="Start"
                                                    WidthRequest="50">
