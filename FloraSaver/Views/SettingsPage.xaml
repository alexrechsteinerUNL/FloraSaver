<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             xmlns:model="clr-namespace:FloraSaver.Models"
             xmlns:viewmodel="clr-namespace:FloraSaver.ViewModels"
             x:DataType="viewmodel:SettingsViewModel"
             x:Class="FloraSaver.SettingsPage">



    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20" >
            <Button Text="Notification Settings" 
                x:Name="notificationSettings"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"/>
            <Button Text="Iot Integration" 
                x:Name="iotIntegration"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"/>
            <Button Text="Backup Plants" 
                x:Name="backupPlants"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"/>
            <Button Text="Clear ALL Data" 
                x:Name="clearAllPlantDataCommand"
                Command="{Binding ClearAllPlantDataCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
