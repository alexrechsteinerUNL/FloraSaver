                <Button
                    x:Name="notificationSettings"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="8"
                    Text="Notification Settings" />
                <Button
                    x:Name="backupPlants"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="8"
                    Text="Backup Plants" />

                <Button
                    x:Name="clearAllPlantGroupDataCommand"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="8"
                    Command="{Binding ClearAllPlantGroupDataCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    Text="Clear ALL Groups"
                    TextColor="#e1ad01" />
                <Button
                    x:Name="clearAllPlantDataCommand"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="8"
                    Command="{Binding ClearAllPlantDataCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    Text="Clear ALL Data"
                    TextColor="#e1ad01" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
