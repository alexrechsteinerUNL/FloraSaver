                                                                EventName="PropertyChanged" />
                                                            <toolkit:EventToCommandBehavior Command="{Binding NextMoveChangedCommand}" EventName="PropertyChanged" />
                                                        </TimePicker.Behaviors>
                                                    </TimePicker>
                                                </Frame>
                                            </Frame>
                                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                                                <ImageButton
                                                    Grid.Column="0"
                                                    BackgroundColor="Black"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=SetToDefaultMorningTimeCommand}"
                                                    CommandParameter="TimeOfNextMove"
                                                    CornerRadius="8"
                                                    HeightRequest="30"
                                                    Source="morning.png"
                                                    WidthRequest="30" />
                                                <ImageButton
                                                    Grid.Column="1"
                                                    BackgroundColor="Black"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=SetToDefaultMiddayTimeCommand}"
                                                    CommandParameter="TimeOfNextMove"
                                                    CornerRadius="8"
                                                    HeightRequest="30"
                                                    Source="midday.png"
                                                    WidthRequest="30" />
                                                <ImageButton
                                                    Grid.Column="2"
                                                    BackgroundColor="Black"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=SetToDefaultNightTimeCommand}"
                                                    CommandParameter="TimeOfNextMove"
                                                    CornerRadius="8"
                                                    HeightRequest="30"
                                                    Source="night.png"
                                                    WidthRequest="30" />
                                            </Grid>
                                        </FlexLayout>
                                    </Grid>
                                </VerticalStackLayout>
                            </ScrollView>
                        </Grid>
                    </Frame>
                </Grid>
                <Grid
                    Grid.Row="2"
                    ColumnDefinitions="*,*"
                    HorizontalOptions="FillAndExpand">
                    <Button
                        Grid.Column="0"
                        Command="{Binding LastButtonPressedCommand}"
                        HorizontalOptions="FillAndExpand"
                        Text="◄" />

                    <Button
                        Grid.Column="1"
                        Command="{Binding NextButtonPressedCommand}"
                        HorizontalOptions="FillAndExpand"
                        Text="►" />
                </Grid>
                <Grid
                    Grid.Row="3"
                    Padding="0"
                    ColumnDefinitions="Auto,*"
                    HorizontalOptions="FillAndExpand"
                    RowDefinitions="Auto, Auto, 40"
                    RowSpacing="0"
                    VerticalOptions="EndAndExpand">
                    <Frame
                        x:Name="clipet"
                        Grid.Row="0"
                        Grid.Column="1"
                        Padding="0,-10,0,-10"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent">
                        <Image
                            Aspect="Fill"
                            MaximumWidthRequest="150"
                            Scale="1"
                            Source="clipet_flowers_sitting_color.png"
                            VerticalOptions="EndAndExpand" />
                    </Frame>
                    <HorizontalStackLayout
                        x:Name="HorizontalSelect"
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="5,0"
                        HorizontalOptions="Center"
                        IsVisible="False"
                        Spacing="5"
                        VerticalOptions="Center">
                        <Button
                            x:Name="addUpdateHor"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=AddUpdateCommand}"
                            CommandParameter="{Binding Plant}"
                            HorizontalOptions="CenterAndExpand"
                            IsEnabled="{Binding IsNotBusy}"
                            MaximumWidthRequest="200"
                            Text="Update" />
                        <Button
                            x:Name="switchToSetupHor"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=SwitchDetailsCommand}"
                            CommandParameter="{StaticResource True}"
                            IsEnabled="{Binding IsNotBusy}"
                            MaximumWidthRequest="200"
                            Text="Card Style" />
                        <Button
                            x:Name="resetChangesHor"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=UndoAllCommand}"
                            CommandParameter="{StaticResource True}"
                            IsEnabled="{Binding IsNotBusy}"
                            MaximumWidthRequest="200"
                            Text="Reset Changes" />
                    </HorizontalStackLayout>
                    <VerticalStackLayout
                        x:Name="VerticalSelect"
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="5,0"
                        HorizontalOptions="Center"
                        Spacing="5"
                        VerticalOptions="Center">
                        <Button
                            x:Name="addUpdate"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=AddUpdateCommand}"
                            CommandParameter="{Binding Plant}"
                            HorizontalOptions="CenterAndExpand"
                            IsEnabled="{Binding IsNotBusy}"
                            Text="Update"
                            WidthRequest="200" />
                        <Button
                            x:Name="switchToSetup"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=SwitchDetailsCommand}"
                            CommandParameter="{StaticResource True}"
                            IsEnabled="{Binding IsNotBusy}"
                            Text="swap"
                            WidthRequest="200" />
                        <Button
                            x:Name="resetChanges"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=UndoAllCommand}"
                            CommandParameter="{StaticResource True}"
                            IsEnabled="{Binding IsNotBusy}"
                            Text="Reset Changes"
                            WidthRequest="200" />
                    </VerticalStackLayout>
                    <Grid
                        x:Name="speechSpace"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Padding="0,-5"
                        IsVisible="False">
                        <Image
                            Aspect="Fill"
                            HeightRequest="140"
                            Source="speech_bubble.png"
                            WidthRequest="400" />
                        <!--  162 characters allowed per box before it's gotta be split  -->
                        <Label
                            x:Name="speech"
                            FontSize="22"
                            HeightRequest="120"
                            Text="{Binding ActiveTab.ClipetText}"
                            TextColor="Orange"
                            WidthRequest="375" />
                    </Grid>
                    <!--  Set up 6 tabs here  -->
                    <Frame
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Padding="0"
                        BackgroundColor="Black">
                        <Grid ColumnDefinitions="*,*,*,*,*,*">
                            <Frame
                                Grid.Column="0"
                                Padding="5"
                                BackgroundColor="Black"
                                BorderColor="Gray">
                                <Frame.Triggers>
                                    <DataTrigger
                                        Binding="{Binding ActiveTab.TabName}"
                                        TargetType="Frame"
                                        Value="PlantName">
                                        <Setter Property="BackgroundColor" Value="{Binding ActiveTab.TabBackground}" />
                                    </DataTrigger>
                                </Frame.Triggers>
                                <ImageButton
                                    Command="{Binding TabPressedCommand}"
                                    CommandParameter="PlantName"
                                    Source="planticonwhite.png" />
                            </Frame>
                            <Frame
                                Grid.Column="1"
                                Padding="5"
                                BackgroundColor="Black"
                                BorderColor="Gray">
                                <Frame.Triggers>
                                    <DataTrigger
                                        Binding="{Binding ActiveTab.TabName}"
                                        TargetType="Frame"
                                        Value="GroupName">
                                        <Setter Property="BackgroundColor" Value="{Binding ActiveTab.TabBackground}" />
                                    </DataTrigger>
                                </Frame.Triggers>
                                <ImageButton
                                    Command="{Binding TabPressedCommand}"
                                    CommandParameter="GroupName"
                                    Source="group_icon.png" />
                            </Frame>
                            <Frame
                                Grid.Column="2"
                                Padding="5"
                                BackgroundColor="Black"
                                BorderColor="Gray">
                                <Frame.Triggers>
                                    <DataTrigger
                                        Binding="{Binding ActiveTab.TabName}"
                                        TargetType="Frame"
                                        Value="GivenName">
                                        <Setter Property="BackgroundColor" Value="{Binding ActiveTab.TabBackground}" />
                                    </DataTrigger>
                                </Frame.Triggers>
                                <ImageButton
                                    Command="{Binding TabPressedCommand}"
                                    CommandParameter="GivenName"
                                    Source="given_name_icon.png" />
                            </Frame>
                            <Frame
                                Grid.Column="3"
                                Padding="5"
                                BackgroundColor="Black"
                                BorderColor="Gray">
                                <Frame.Triggers>
                                    <DataTrigger
                                        Binding="{Binding ActiveTab.TabName}"
                                        TargetType="Frame"
                                        Value="Water">
                                        <Setter Property="BackgroundColor" Value="{Binding ActiveTab.TabBackground}" />
                                    </DataTrigger>
                                </Frame.Triggers>
                                <ImageButton
                                    Command="{Binding TabPressedCommand}"
                                    CommandParameter="Water"
                                    Source="future_notify_water.png" />
                            </Frame>
                            <Frame
                                Grid.Column="4"
                                Padding="5"
                                BackgroundColor="Black"
                                BorderColor="Gray">
                                <Frame.Triggers>
                                    <DataTrigger
                                        Binding="{Binding ActiveTab.TabName}"
                                        TargetType="Frame"
                                        Value="Refresh">
                                        <Setter Property="BackgroundColor" Value="{Binding ActiveTab.TabBackground}" />
                                    </DataTrigger>
                                </Frame.Triggers>
                                <ImageButton
                                    Command="{Binding TabPressedCommand}"
                                    CommandParameter="Refresh"
                                    Source="future_notify_mist.png" />
                            </Frame>
                            <Frame
                                Grid.Column="5"
                                Padding="5"
                                BackgroundColor="Black"
                                BorderColor="Gray">
                                <Frame.Triggers>
                                    <DataTrigger
                                        Binding="{Binding ActiveTab.TabName}"
                                        TargetType="Frame"
                                        Value="Sun">
                                        <Setter Property="BackgroundColor" Value="{Binding ActiveTab.TabBackground}" />
                                    </DataTrigger>
                                </Frame.Triggers>
                                <ImageButton
                                    Command="{Binding TabPressedCommand}"
                                    CommandParameter="Sun"
                                    Source="future_notify_sun.png" />
                            </Frame>
                        </Grid>
                    </Frame>
                </Grid>
            </Grid>
            <Frame
                Grid.Row="1"
                Padding="5"
                BackgroundColor="DimGray"
                HorizontalOptions="Center"
                IsVisible="{Binding IsFriendlyLabelVisible}"
                MaximumHeightRequest="250"
                MaximumWidthRequest="250"
                Opacity=".9"
                VerticalOptions="Center">
                <Label
                    x:Name="friendlyNotification"
                    FontSize="16"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsFriendlyLabelVisible}"
                    Text="{Binding FriendlyLabel}"
                    VerticalOptions="Center" />
            </Frame>
        </Grid>
        <Button
            BackgroundColor="Transparent"
            BorderColor="Transparent"
            Clicked="deadSpaceButtonHideSuggestion_Clicked"
            Command="{Binding HideSearchSuggestionBoxCommand}"
            IsVisible="{Binding ShowSearchSuggestionsBox}" />
        <Grid
            x:Name="_SearchSuggestionBox"
            Padding="10,170,10,0"
            ColumnDefinitions="*"
            HorizontalOptions="Center"
            IsVisible="{Binding ShowSearchSuggestionsBox}"
            MaximumWidthRequest="500"
            RowDefinitions="Auto, 50">
            <CollectionView
                x:Name="plantSuggestionDeck"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalOptions="Fill"
                ItemsSource="{Binding TopTenAutoFillPlants}"
                MaximumHeightRequest="200"
                SelectionMode="None"
                VerticalScrollBarVisibility="Always">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:Name="bloop0" x:DataType="model:SearchedPlants">
                        <Frame
                            Background="Black"
                            BackgroundColor="Black"
                            BorderColor="{Binding GroupColor}">
                            <Grid ColumnDefinitions="6*, *">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label
                                        IsVisible="{Binding IsPlantExisting}"
                                        Text="{Binding GivenName}"
                                        TextColor="{Binding GroupColor}" />
                                    <Label Text="{Binding PlantSpecies}" />
                                </VerticalStackLayout>

                                <Button
                                    Grid.Column="1"
                                    Clicked="deadSpaceButtonHideSuggestion_Clicked"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:PlantDetailsViewModel}}, Path=AutoFillPlantSpeciesCommand}"
                                    CommandParameter="{Binding .}"
                                    Text="{Binding ConnectedIcon}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>